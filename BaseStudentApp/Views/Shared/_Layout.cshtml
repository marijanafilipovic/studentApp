<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title style="color:white;">@ViewBag.Title - MVC ASP.NET Application - Sudenti</title>
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/dt/dt-1.10.18/datatables.min.css" />
    <script src="~/Scripts/jquery.dataTables.min.js"></script>

    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/themes/base")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header" style="color:black;">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("STUDENTI", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })

            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li style="color:white;">@Html.ActionLink("Home", "Index", "Home")</li>
                    <li style="color:black;">@Html.ActionLink("Upisi studenta", "addStudent", "Student")</li>
                    <li style="color:black;">@Html.ActionLink("Lista studenata", "getStudent", "Student")</li>
                    <li style="color:black;">@Html.ActionLink("Dodaj ispit", "Create", "Ispit")</li>
                    <li style="color:black;">@Html.ActionLink("Master lista", "MasterLista", "Home")</li>
                    <li style="color:black;">@Html.ActionLink("Lista ispita", "Index", "Ispit")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - STUDENTI</p>
        </footer>
    </div>
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryui")

    @RenderSection("scripts", required: false)
</body>
</html>
